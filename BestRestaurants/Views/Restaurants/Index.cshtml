@{
  Layout = "_Layout";
}

@using BestRestaurants.Models;

@if (@Model.Count == 0)
{
  <p> Please add a restaurant!</p>
}

@foreach (Restaurant restaurant in Model)
{
  <div>
    <h4>@Html.ActionLink($"{restaurant.RestaurantName}","Details", new {id = restaurant.RestaurantId})</h4>
  </div>
}

<div>@Html.ActionLink("Add restaurant", "Create")</div>
<div>@Html.ActionLink("Return Home", "Index", "Home")</div>